{
  "manifest_version":3,
  "version":"1.0.4",
  "name":"Image Tracker",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "file_system_provider_capabilities": {
    "configurable": true,
    "watchable": false,
    "multiple_mounts": true,
    "source": "network"
  },
  "description":"Download images from instagram or from any other site" ,
  "author":"Pedro Augusto Schroeder",
  "action" : {
      "default_popup": "popup.html",
      "default_title": "Image Tracker",
      "default_icon": "logo-vermelho.png"
  },
  "options_page": "options.html",
  "icons": {
    "16": "logo-vermelho.png",
    "48": "logo-vermelho.png",
    "128": "logo-vermelho.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "minimum_chrome_version": "92",
  "content_scripts":[
      {
          "matches":[
            "<all_urls>"
          ],
          "js":[
            "content.js"
          ]
      }
  ]
}